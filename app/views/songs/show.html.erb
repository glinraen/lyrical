<p id="notice"><%= notice %></p>

<p>
  <h4>Title:</h4>
  <%= @song.title %>
</p>

<p>
  <strong>Lyrics:</strong>
  <%= @song.lyrics %>
</p>

<p>
  <strong>Origin:</strong>
  <%= @song.origin %>
</p>

<strong>Tags</strong>
<p>
<% @song.tags.any? %>
	<% @song.tag_list.each do |tag| %>
	<%= link_to tag, tagged_path(tag: tag) %>
<% end %>
</p>


<%= link_to 'Edit', edit_song_path(@song) %> |
<%= link_to 'Back', songs_path %>
